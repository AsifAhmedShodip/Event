<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:src="@drawable/red"
        android:scaleType="center"/>

    <ImageButton
        android:id="@+id/addPerson"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:clickable="true"
        android:src="@mipmap/ic_person_add_black_24dp" />

    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-30dp"
        android:background="#00000000"
        android:clickable="true"
        android:layout_alignLeft="@+id/addPerson"
        android:src="@mipmap/ic_arrow_drop_down_black_48dp" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:src="@mipmap/ic_edit_black_36dp"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/addPerson"
        android:layout_toStartOf="@+id/addPerson" />

    <TextView
        android:id="@+id/editText55"
        android:layout_width="355dp"
        android:layout_height="350dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:hint="Description....."
        android:textColor="#000000"
        android:ellipsize ="end"
        android:textSize="15dp"
        android:background="@drawable/textinput_03"
        android:gravity="top|left"
        android:focusable="false"
        android:maxLines = "2000"
        android:scrollbars = "vertical"
        android:layout_below="@+id/addPerson"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:layout_below="@+id/editText55"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Not Going" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Maybe" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:text="Going" />

    </RelativeLayout>


</RelativeLayout>